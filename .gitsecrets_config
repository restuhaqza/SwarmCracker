# SwarmCracker - Git Configuration for Secret Prevention

# Pre-commit hooks
[core]
    hooksPath = .githooks

# Secret detection patterns (for reference)
# These patterns are checked by the pre-commit hook
[
    "password.*=.*[\"'].*[\"']",
    "api[_-]?key.*=.*[\"'].*[\"']",
    "secret[_-]?key.*=.*[\"'].*[\"']",
    "token.*=.*[\"'].*[\"']",
    "private[_-]?key.*=.*[\"'].*[\"']",
    "BEGIN.*PRIVATE KEY",
    "BEGIN.*RSA PRIVATE KEY",
    "ssh-rsa.* AAAA",
    "ghp_[a-zA-Z0-9]{36}",
    "AKIA[0-9A-Z]{16}"
]
